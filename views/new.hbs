<div class='container mt-3'>
  <form action='/expenses/new' method='POST'>
    <div class='row mb-3'>
      <div class='p-2 bd-highlight col-3'>
        *必填欄位</div>
      <div class='p-2 bd-highlight col-6'>請輸入你的支出</div>
    </div>
    <div class='row mb-3'>
      <label for='name' class='col-sm-2 col-form-label'>名稱*：</label>
      <div class='col-sm-10'>
        <input
          type='text'
          class='form-control'
          id='name'
          placeholder='請輸入名稱'
          name='name'
        />
      </div>
    </div>
    <div class='row mb-3'>
      <label for='date' class='col-sm-2 col-form-label'>日期*：</label>
      <div class='col-sm-10'>
        <input type='date' class='form-control' id='date' name='date' />
      </div>
    </div>
    <fieldset class='row mb-3'>
      <legend class='col-form-label col-sm-2 pt-0' for='autoSizingSelect'><label
          for='category'
        >類別*:</label></legend>
      <div class='col-sm-10'>
        <select class='form-select' id='category' name='category'>
          <option selected>請選擇類別</option>
          <option value='家居物業'>家居物業</option>
          <option value='交通出行'>交通出行</option>
          <option value='休閒娛樂'>休閒娛樂</option>
          <option value='餐飲食品'>餐飲食品</option>
          <option value='其他'>其他</option>
        </select>
      </div>
    </fieldset>
    <div class='row mb-3'>
      <label for='amount' class='col-sm-2 col-form-label'>支出*：</label>
      <div class='col-sm-10'>
        <input
          type='number'
          class='form-control'
          id='amount'
          min='0'
          placeholder='0'
          name='amount'
        />
      </div>
    </div>
    <button type='submit' class='btn btn-primary'>新增支出</button>
  </form>
</div>